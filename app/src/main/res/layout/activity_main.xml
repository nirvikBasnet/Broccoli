<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  >

    <data>
        <variable
            name="viewModel"
            type="com.example.broccoli.presentation.FormViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Name"
            android:text="@={viewModel.name}"
            android:error="@{viewModel.nameError}"/>

        <EditText
            android:text="@={viewModel.email}"
            android:error="@{viewModel.emailError}"
            android:hint="Enter your Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:text="@={viewModel.confirmEmail}"
            android:error="@{viewModel.confirmEmailError}"
            android:hint="Confirm your Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />


    </LinearLayout>


</layout>